#!/usr/bin/make -f

PKG_PATH:=/usr/share/php/EaseCore
BUILD_DIR:=build

%:
	dh $@

override_dh_auto_test:
	echo tests temporarly skipped for now in rules file

override_dh_install:
	dh_install
	./debian/fixversion.sh
	echo "require_once 'Mail.php';"  >> debian/ease-core/usr/share/php/Ease/Mailer.php
	echo "require_once 'Mail/mime.php';" >> debian/ease-core/usr/share/php/Ease/Mailer.php
