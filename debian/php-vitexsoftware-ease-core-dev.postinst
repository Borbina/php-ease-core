#!/bin/sh

#DEBHELPER#

# postinst script for php-vitexsoftware-ease-core-dev
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

        composer-global-update deb/ease-core-dev
	composer-debian php-vitexsoftware-ease-core-dev
        su - `composer-webuser` -s /bin/bash -c 'ls -la /usr/share/php/EaseCoreTests/i18n/*';
        su - `composer-webuser` -s /bin/bash -c 'ls -la /usr/share/php/EaseCoreTests/i18n/*/*/*';

        su -s /bin/bash -c 'ls -la /usr/share/locale/*/LC_MESSAGES/php-vitexsoftware-ease-core.mo';

        su - `composer-webuser` -s /bin/bash -c 'ls -la /usr/share/locale/*/LC_MESSAGES/php-vitexsoftware-ease-core.mo';
        su - `composer-webuser` -s /bin/bash -c 'file /usr/share/locale/*/LC_MESSAGES/php-vitexsoftware-ease-core.mo';
	su - `composer-webuser` -s /bin/bash -c 'phpunit --bootstrap /usr/share/php/EaseCoreTests/Bootstrap.php --configuration /usr/share/php/EaseCoreTests/phpunit.xml'

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0

#DEBHELPER#
