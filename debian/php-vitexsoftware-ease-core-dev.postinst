#!/bin/sh
# postinst script for php-vitexsoftware-ease-core-dev

set -e

. /usr/share/debconf/confmodule

db_get composer/WEB_USER
WEBUSER=$RET
mkdir -p /var/lib/php-vitexsoftware-ease-core
chown $WEBUSER /var/lib/php-vitexsoftware-ease-core /var/lib/composer -R
echo '{}' > /usr/share/php/EaseCore/composer.lock
chown $WEBUSER /usr/share/php/EaseCore/composer.lock
su - $WEBUSER -s /bin/bash -c 'COMPOSER_HOME="/var/lib/composer" composer -o install -d /usr/share/php/EaseCore/'
